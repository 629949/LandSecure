<Page
    x:Class="LandSecure.LandSearchPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:LandSecure"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid Background="White">

        <StackPanel
            Width="1200"
            Height="900"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            BorderBrush="Gray"
            BorderThickness="1"
            CornerRadius="5"
            Orientation="Vertical">
            <TextBlock
                Width="400"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="40"
                FontStyle="Normal"
                Foreground="Black"
                Text="searching for land" />


            <StackPanel
                Width="500"
                Height="100"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <ComboBox
                    Margin="100,0,0,15"
                    Background="White"
                    BorderBrush="Black"
                    Foreground="Black"
                    Header="Property Type*"
                    SelectedItem="{Binding PropertyType, Mode=TwoWay}">
                    <ComboBoxItem Content="Residential" />
                    <ComboBoxItem Content="Commercial" />
                    <ComboBoxItem Content="Agricultural" />
                </ComboBox>

                <ComboBox
                    Margin="100,0,0,15"
                    Background="White"
                    BorderBrush="Black"
                    Foreground="Black"
                    Header="Size*"
                    SelectedItem="{Binding PropertyType, Mode=TwoWay}">
                    <ComboBoxItem Content="Residential" />
                    <ComboBoxItem Content="Commercial" />
                    <ComboBoxItem Content="Agricultural" />
                </ComboBox>

                <TextBox
                    Height="30"
                    Margin="20,0,0,0"
                    Background="White"
                    BorderBrush="Black"
                    BorderThickness="1" />

            </StackPanel>


            <Button
                Margin="20"
                HorizontalAlignment="Right"
                Background="#3338A0"
                Content="Search"
                CornerRadius="5" />

        </StackPanel>

    </Grid>
</Page>
