<Page
    x:Class="LandSecure.LandSearchPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:LandSecure"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid Background="White">

        <StackPanel
            Width="1200"
            Height="900"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            BorderBrush="Gray"
            BorderThickness="1"
            CornerRadius="5"
            Orientation="Vertical">


            <StackPanel
                Width="1200"
                Height="300"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Background="#3338A0"
                Orientation="Vertical">


                <TextBlock
                    Width="350"
                    Margin="100,30,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="40"
                    FontStyle="Normal"
                    Foreground="White"
                    Text="searching for land" />


                <StackPanel
                    Width="500"
                    Height="150"
                    Padding="20"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">

                    <!--  choose location  -->

                    <ComboBox
                        Margin="130,0,0,15"
                        Background="White"
                        BorderBrush="Black"
                        Foreground="white"
                        Header="Location*"
                        SelectedItem="{Binding PropertyType, Mode=TwoWay}">
                        <ComboBoxItem Content="Gayaza" />
                        <ComboBoxItem Content="Mukono" />
                        <ComboBoxItem Content="Entebbe" />
                        <ComboBoxItem Content="Masaka" />
                        <ComboBoxItem Content="Lira" />
                        <ComboBoxItem Content="Nakasongola" />
                    </ComboBox>


                    <!--  size of land  -->
                    <ComboBox
                        Margin="10,0,0,15"
                        Background="White"
                        BorderBrush="Black"
                        Foreground="White"
                        Header="Size(Acres)*"
                        SelectedItem="{Binding PropertyType, Mode=TwoWay}">
                        <ComboBoxItem Content="50 x 100" />
                        <ComboBoxItem Content="50 x 50" />
                        <ComboBoxItem Content="100 x 100" />
                        <ComboBoxItem Content="20 x 50" />

                    </ComboBox>


                    <!--  Price Range  -->
                    <ComboBox
                        Margin="10,0,0,15"
                        Background="White"
                        BorderBrush="Black"
                        Foreground="white"
                        Header="Amount*"
                        SelectedItem="{Binding PropertyType, Mode=TwoWay}" />

                </StackPanel>

            </StackPanel>


            <!-- <Button
                Margin="20"
                HorizontalAlignment="Right"
                Background="#3338A0"
                Content="Search"
                CornerRadius="5" />-->

            <!--  Placeholder for search results  -->
            <StackPanel
                Width="1200"
                Height="400"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Orientation="Horizontal" />



        </StackPanel>
    </Grid>
</Page>
