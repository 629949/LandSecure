<Page
    x:Class="LandSecure.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:LandSecure"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Page.Resources>
        <!--  style for the cards  -->
        <Style x:Key="Cards" TargetType="StackPanel">
            <Setter Property="Background" Value="white" />
            <Setter Property="Width" Value="400" />
            <Setter Property="Height" Value="500" />
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="Orientation" Value="Vertical" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="10" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="BorderBrush" Value="Gray" />
            <Setter Property="BorderThickness" Value="2" />




        </Style>

        <!--  styles for the text block  -->

        <Style x:Key="Paragragh" TargetType="TextBlock">
            <Setter Property="Width" Value="200" />
            <Setter Property="Height" Value="200" />
            <Setter Property="TextWrapping" Value="Wrap" />
            <Setter Property="Margin" Value="0,70,0,0" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="Foreground" Value="Black" />




        </Style>


        <!--  style for the buttons  -->
        <Style x:Key="Buttons" TargetType="Button">
            <Setter Property="Width" Value="100" />
            <Setter Property="Height" Value="50" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="10" />
            <Setter Property="Background" Value="#3338A0" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="BorderBrush" Value="White" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="CornerRadius" Value="5" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="15" />

        </Style>

    </Page.Resources>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="215*" />
            <RowDefinition Height="0*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>


        <ScrollViewer
            Grid.RowSpan="2"
            Grid.ColumnSpan="2"
            VerticalScrollBarVisibility="Auto">







            <StackPanel>

                <Grid Height="800">
                    <!--  Background image  -->
                    <Image Source="/Assets/header_land_image.jpg" Stretch="UniformToFill" />

                    <!--  subtle dark overlay for contrast (only the rectangle is semi-transparent)  -->
                    <Rectangle
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Fill="Black"
                        Opacity="0.30" />

                    <!--  Title centered over the image; uses theme foreground so it adapts to light/dark  -->
                    <StackPanel
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Spacing="6">
                        <TextBlock
                            FontSize="56"
                            FontWeight="Bold"
                            Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"
                            Text="landsecure"
                            TextAlignment="Center" />

                        <!--  optional tagline; remove if not wanted  -->
                        <TextBlock
                            FontSize="16"
                            Foreground="{ThemeResource SystemControlForegroundBaseLowBrush}"
                            Opacity="0.95"
                            Text="Secure your land • Verify • Transfer"
                            TextAlignment="Center" />
                    </StackPanel>
                </Grid>
                <StackPanel>

                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="30"
                        FontStretch="Expanded"
                        FontWeight="Bold"
                        Foreground="#3338A0"
                        Text="Get rid of the hustle of waiting in line" />


                </StackPanel>


                <StackPanel
                    Height="950"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <StackPanel Style="{StaticResource Cards}">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="20"
                            FontWeight="Bold"
                            Foreground="#3338A0"
                            Text="Verifying Documents" />
                        <TextBlock Style="{StaticResource Paragragh}" Text="Easily confirm land authenticity by scanning                                 a QR code or barcode linked to verified records.                                  Instantly check ownership details, location data,                                  and legitimacy to avoid fraud or fake documents" />
                        <Button
                            Click="verifybtn"
                            Content="See more"
                            Style="{StaticResource Buttons}" />
                    </StackPanel>

                    <StackPanel Style="{StaticResource Cards}">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="20"
                            FontWeight="Bold"
                            Foreground="#3338A0"
                            Text="Looking For Land" />
                        <TextBlock Style="{StaticResource Paragragh}" Text="Search and explore available plots based on your preferences — location, size, or price.                                  Our system connects you to verified listings so you can find                                  genuine land opportunities fast." />
                        <Button
                            Click="SearchLandBtn"
                            Content="See more"
                            Style="{StaticResource Buttons}" />
                    </StackPanel>


                    <StackPanel Style="{StaticResource Cards}">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="20"
                            FontWeight="Bold"
                            Foreground="#3338A0"
                            Text="Transfer of titles" />
                        <TextBlock Style="{StaticResource Paragragh}" Text="Simplify the transfer of land ownership through a secure digital process.                                   We handle verification, document validation,                                  and owner updates — making land transfers smooth, transparent, and traceable." />

                        <Button
                            Click="TransferLandBtn"
                            Content="See more"
                            Style="{StaticResource Buttons}" />
                    </StackPanel>

                </StackPanel>


                <Grid
                    Height="900"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center">

                    <!--  Background Image  -->
                    <Grid.Background>
                        <ImageBrush ImageSource="/Assets/lawyer.jpeg" Stretch="UniformToFill" />
                    </Grid.Background>

                    <!--  Dark overlay for better text readability  -->
                    <Rectangle Fill="Black" Opacity="0.6" />

                    <!--  Content on top  -->
                    <StackPanel
                        MaxWidth="800"
                        Padding="40"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">

                        <TextBlock
                            Margin="0,0,0,20"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="30"
                            FontStretch="Expanded"
                            FontWeight="Bold"
                            Foreground="White"
                            Text="Secure Your Land with Confidence"
                            TextAlignment="Center" />

                        <TextBlock
                            Margin="0,0,0,20"
                            FontSize="16"
                            Foreground="White"
                            Text="Connect with verified property lawyers who specifications"
                            TextAlignment="Center"
                            TextWrapping="Wrap" />

                        <Button
                            HorizontalAlignment="Center"
                            Content="See more"
                            Style="{StaticResource Buttons}" />
                    </StackPanel>
                </Grid>


                <!--  footer  -->
                <StackPanel
                    Width="1200"
                    Height="400"
                    Padding="20"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Background="#f5f5f5"
                    Orientation="Horizontal"
                    Spacing="20">

                    <!--  SERVICES CARD  -->
                    <StackPanel
                        Width="300"
                        Margin="250,0,0,0"
                        Padding="20"
                        VerticalAlignment="Center"
                        Background="White"
                        BorderBrush="#DDDDDD"
                        BorderThickness="1"
                        CornerRadius="12"
                        Orientation="Vertical"
                        Spacing="10">

                        <StackPanel.Shadow>
                            <ThemeShadow />
                        </StackPanel.Shadow>


                        <TextBlock
                            FontSize="22"
                            FontWeight="Bold"
                            Text="Our Services:" />

                        <TextBlock FontSize="16" Text="• Land Verification" />
                        <TextBlock FontSize="16" Text="• Document Authentication" />
                        <TextBlock FontSize="16" Text="• Title Transfer" />
                        <TextBlock FontSize="16" Text="• Legal Support" />
                    </StackPanel>

                    <!--  HOW IT WORKS CARD  -->
                    <StackPanel
                        Width="300"
                        Margin="20"
                        Padding="20"
                        VerticalAlignment="Center"
                        Background="White"
                        BorderBrush="#DDDDDD"
                        BorderThickness="1"
                        CornerRadius="12"
                        Orientation="Vertical"
                        Spacing="10">

                        <StackPanel.Shadow>
                            <ThemeShadow />
                        </StackPanel.Shadow>


                        <TextBlock
                            FontSize="22"
                            FontWeight="Bold"
                            Text="How It Works:" />

                        <TextBlock
                            FontSize="16"
                            FontWeight="SemiBold"
                            Text="• Create an account" />
                        <TextBlock
                            FontSize="16"
                            FontWeight="SemiBold"
                            Text="• Upload your documents" />
                        <TextBlock
                            FontSize="16"
                            FontWeight="SemiBold"
                            Text="• Get verified results" />
                        <TextBlock
                            FontSize="16"
                            FontWeight="SemiBold"
                            Text="• Complete your transaction" />
                    </StackPanel>

                </StackPanel>

                <TextBlock
                    Width="300"
                    Margin="20"
                    Padding="20"
                    VerticalAlignment="Center"
                    FontSize="14"
                    Foreground="Gray"
                    Text="© 2025 LandSecure. All rights reserved. | Privacy Policy | Terms of Service"
                    TextWrapping="Wrap" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
