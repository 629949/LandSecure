<Page
    x:Class="LandSecure.Verifying"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LandSecure"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="Gray"
          
          >

        <StackPanel Orientation="Vertical"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Width="800"
                    Height="700"
                    BorderBrush="White"
                    BorderThickness="2"
                    CornerRadius="15"
                    >
            
            
            <TextBlock Text="Verify Your Title"
                       FontSize="36"
                       FontWeight="Bold"
                       Foreground="DarkSlateGray"
                       
                       />

            <TextBlock Text="Please upload your title document for verification."/>

            <TextBox Width="600"
                     Height="40"
                     Margin="0,20,0,0"
                     PlaceholderText="Select your document..."
                     Background="LightGray"
                     Foreground="Black"
                     />

            <Button Content="Upload Document"
                    Width="200"
                    Height="60"
                    Margin="0,20,0,0"
                    Background="Green"
                    FontSize="18"
                    FontWeight="SemiBold"/>
        </StackPanel>
        

    </Grid>
</Page>
