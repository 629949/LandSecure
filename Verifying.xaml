<Page
    x:Class="LandSecure.Verifying"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:LandSecure"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <ScrollViewer Background="#F8FAFC" Foreground="Black">
        <Grid
            Width="900"
            Padding="40"
            Background="White">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                Width="800"
                Margin="100,0,0,20"
                FontSize="32"
                FontWeight="Bold"
                Text="Document Verification" />

            <!--  Progress Bar  -->
            <StackPanel
                Grid.Row="1"
                Width="800"
                Height="100"
                Margin="0,0,0,30"
                Background="#3338A0"
                BorderBrush="Black"
                BorderThickness="2"
                CornerRadius="5">
                <TextBlock
                    x:Name="StepIndicator"
                    Margin="100,20,100,10"
                    FontSize="16"
                    Foreground="White"
                    Text="Step 1 of 3: Property Details" />
                <ProgressBar
                    x:Name="ProgressBar"
                    Height="10"
                    Margin="100,0,100,10"
                    Maximum="100"
                    Value="33" />
            </StackPanel>

            <Grid Grid.Row="2">

                <!--  Step 1: Property Details  -->
                <StackPanel
                    x:Name="Step1Panel"
                    Width="800"
                    BorderBrush="Black"
                    BorderThickness="2"
                    CornerRadius="5"
                    Visibility="Visible">
                    <StackPanel
                        Width="800"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <TextBlock
                            Margin="100,20,0,20"
                            FontSize="24"
                            FontWeight="Bold"
                            Text="Property Identification" />



                        <Button
                            Margin="300,20,0,20"
                            HorizontalAlignment="Center"
                            Click="clearform"
                            Content="clear"
                            Foreground="Black" />
                    </StackPanel>



                    <TextBox
                        x:Name="PropertyIdBox"
                        Width="600"
                        Margin="0,0,0,15"
                        Background="White"
                        BorderBrush="Black"
                        CornerRadius="5"
                        Foreground="Black"
                        Header="Property ID*"
                        PlaceholderForeground="Black"
                        PlaceholderText="Enter property ID"
                        Text="{Binding PropertyId, Mode=TwoWay}"
                        TextChanged="PropertyIdBox_TextChanged" />

                    <TextBox
                        x:Name="LocationBox"
                        Width="600"
                        Margin="0,0,0,15"
                        Background="White"
                        BorderBrush="Black"
                        CornerRadius="5"
                        Foreground="Black"
                        Header="Location*"
                        PlaceholderForeground="Black"
                        PlaceholderText="Enter location"
                        Text="{Binding Location, Mode=TwoWay}" />

                    <ComboBox
                        Margin="100,0,0,15"
                        Background="White"
                        BorderBrush="Black"
                        Foreground="Black"
                        Header="Property Type*"
                        SelectedItem="{Binding PropertyType, Mode=TwoWay}">
                        <ComboBoxItem Content="Residential" />
                        <ComboBoxItem Content="Commercial" />
                        <ComboBoxItem Content="Agricultural" />
                    </ComboBox>

                    <TextBox
                        Width="600"
                        Margin="0,0,0,15"
                        Background="White"
                        BorderBrush="Black"
                        CornerRadius="5"
                        Foreground="Black"
                        Header="Size (Acres)"
                        PlaceholderForeground="Black"
                        PlaceholderText="Enter size"
                        Text="{Binding Size, Mode=TwoWay}" />
                </StackPanel>

                <!--  Step 2: Owner Details  -->
                <StackPanel
                    x:Name="Step2Panel"
                    Width="800"
                    BorderBrush="Black"
                    BorderThickness="2"
                    CornerRadius="5"
                    Visibility="Collapsed">
                    <TextBlock
                        Margin="0,0,0,20"
                        FontSize="24"
                        FontWeight="Bold"
                        Text="Owner Information" />

                    <TextBox
                        x:Name="OwnerNameBox"
                        Width="600"
                        Margin="0,0,0,15"
                        Background="White"
                        BorderBrush="Black"
                        CornerRadius="5"
                        Foreground="Black"
                        Header="Owner Name*"
                        PlaceholderForeground="Black"
                        PlaceholderText="Full legal name"
                        Text="{Binding OwnerName, Mode=TwoWay}" />

                    <TextBox
                        x:Name="identification"
                        Width="600"
                        Margin="0,0,0,15"
                        Background="White"
                        BorderBrush="Black"
                        CornerRadius="5"
                        Foreground="Black"
                        Header="National ID*"
                        PlaceholderForeground="Black"
                        PlaceholderText="Enter ID number"
                        Text="{Binding NationalId, Mode=TwoWay}" />

                    <TextBox
                        x:Name="contactinfo"
                        Width="600"
                        Margin="0,0,0,15"
                        Background="White"
                        BorderBrush="Black"
                        CornerRadius="5"
                        Foreground="Black"
                        Header="Phone Number*"
                        PlaceholderForeground="Black"
                        PlaceholderText="+256 XXX XXX XXX"
                        Text="{Binding Contact, Mode=TwoWay}" />

                    <TextBox
                        x:Name="emailaddress"
                        Width="600"
                        Margin="0,0,0,15"
                        Background="White"
                        BorderBrush="Black"
                        CornerRadius="5"
                        Foreground="Black"
                        Header="Email"
                        PlaceholderForeground="Black"
                        PlaceholderText="owner@example.com"
                        Text="{Binding Email, Mode=TwoWay}" />
                </StackPanel>

                <!--  Step 3: Document Upload  -->
                <StackPanel
                    x:Name="Step3Panel"
                    Width="800"
                    BorderBrush="Black"
                    BorderThickness="2"
                    CornerRadius="5"
                    Visibility="Collapsed">
                    <TextBlock
                        Margin="0,0,0,20"
                        FontSize="24"
                        FontWeight="Bold"
                        Text="Upload Documents" />

                    <TextBlock Margin="0,0,0,15" Text="Please upload the following documents:" />

                    <Button
                        Margin="0,0,0,10"
                        HorizontalAlignment="Left"
                        Background="#3338A0"
                        Click="UploadTitleDeed_Click"
                        Content=" Upload Title Deed"
                        CornerRadius="5"
                        Foreground="white" />
                    <TextBlock
                        x:Name="TitleDeedStatus"
                        Margin="0,0,0,20"
                        Foreground="Gray"
                        Text="No file selected" />

                    <Button
                        Margin="0,0,0,10"
                        HorizontalAlignment="Left"
                        Background="#3338A0"
                        Click="UploadIdCopy_Click"
                        Content="Upload ID Copy"
                        CornerRadius="5"
                        Foreground="white" />
                    <TextBlock
                        x:Name="IdCopyStatus"
                        Margin="0,0,0,20"
                        Foreground="Gray"
                        Text="No file selected" />

                    <Button
                        Width="60"
                        Height="60"
                        Margin="0,0,0,10"
                        HorizontalAlignment="Left"
                        CornerRadius="5">
                        <StackPanel Width="60" Height="60">
                            <Image Source="/Assets/fingerprint.svg" Stretch="UniformToFill" />
                        </StackPanel>
                    </Button>
                    <TextBlock
                        Margin="0,0,0,20"
                        Foreground="Gray"
                        Text="Scan Fingerprint" />

                    <TextBox
                        Width="600"
                        Height="400"
                        Margin="0,0,0,15"
                        AcceptsReturn="True"
                        Background="White"
                        BorderBrush="Gray"
                        BorderThickness="1"
                        CornerRadius="5"
                        Header="Additional Notes"
                        PlaceholderText="Any additional information..."
                        Text="{Binding Notes, Mode=TwoWay}"
                        TextWrapping="Wrap" />
                </StackPanel>
            </Grid>

            <!--  Navigation Buttons  -->
            <StackPanel
                Grid.Row="3"
                Margin="0,30,0,0"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <Button
                    x:Name="BackBtn"
                    Width="100"
                    Margin="0,0,10,0"
                    Background="#3338A0"
                    BorderBrush="#3338A0"
                    BorderThickness="2"
                    Click="backbtn"
                    Content="Back"
                    CornerRadius="2"
                    Foreground="White"
                    Visibility="Collapsed" />
                <Button
                    x:Name="NextBtn"
                    Width="100"
                    Background="#3338A0"
                    BorderBrush="#3338A0"
                    BorderThickness="2"
                    Click="nextbtn"
                    Content="Next"
                    CornerRadius="2"
                    Foreground="White" />
            </StackPanel>

        </Grid>
    </ScrollViewer>



</Page>