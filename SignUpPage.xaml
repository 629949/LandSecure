<Page
    x:Class="LandSecure.SignUpPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:LandSecure"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid>

        <Grid.Background>
            <ImageBrush ImageSource="/Assets/landunsplash.jpg" Stretch="UniformToFill" />
        </Grid.Background>

        <StackPanel
            Width="350"
            Height="600"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="white"
            BorderBrush="Black"
            BorderThickness="1"
            CornerRadius="10"
            Orientation="Vertical">

            <!--  FIX: Use Image directly in StackPanel instead of inside TextBlock  -->

            <StackPanel
                Width="60"
                Margin="0,30,0,0"
                CornerRadius="50">
                <Image
                    Width="60"
                    Height="60"
                    Source="/Assets/header_land_image.jpg"
                    Stretch="Fill" />
            </StackPanel>

            <TextBlock
                Margin="0,10,0,0"
                HorizontalAlignment="Center"
                FontSize="10"
                FontWeight="Bold"
                Foreground="#3338A0"
                Text="Welcome" />

            <TextBlock
                Margin="0,10,0,0"
                HorizontalAlignment="Center"
                FontSize="15"
                Foreground="#3338A0"
                Text="Create your account" />

            <TextBox
                Width="200"
                Height="50"
                Margin="10"
                CornerRadius="5"
                Text="First Name" />
            <TextBox
                Width="200"
                Height="50"
                Margin="10"
                CornerRadius="5"
                Text="Last Name" />

            <TextBox
                x:Name="usrname"
                Width="200"
                Height="50"
                Margin="10"
                CornerRadius="5"
                PlaceholderText="User Name" />


            <PasswordBox
                x:Name="pwd"
                Width="200"
                Height="50"
                Margin="10"
                CornerRadius="5"
                PlaceholderText="Password" />

            <PasswordBox
                x:Name="confirmpwd"
                Width="200"
                Height="50"
                Margin="10"
                CornerRadius="5"
                PlaceholderText="Confirm Password" />

            <Button
                Width="100"
                Margin="10"
                HorizontalAlignment="Center"
                Background="#3338A0"
                BorderBrush="Black"
                BorderThickness="2"
                Click="Signup_Click"
                Content="Signup"
                CornerRadius="3"
                FontSize="20"
                Foreground="white" />
        </StackPanel>




    </Grid>
</Page>
